pipeline {
    agent any
    tools {
        terraform 'terraform'
    }
    stages {
        
        stage('checkout') {
            steps {
               script {
                    checkout([$class: 'GitSCM',
                              branches: [[name: 'main']],
                              userRemoteConfigs: [[url: 'https://github.com/H4rsh99/harsh_sonar.git']]])
                }
           
            }
        }
        stage('terra-init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('terra-apply') {
            
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
        stage('list') {
         
                       
            steps {
                sh 'ls'
            }
        }
    }
}
