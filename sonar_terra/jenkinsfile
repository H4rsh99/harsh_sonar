pipeline {
    agent any
    
    tools {
        terraform 'terraform'
    }
    stages {
        
        stage('checkout') {
            steps {
                 git branch: 'main', url: 'https://github.com/H4rsh99/harsh_sonar.git'
               // checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'edf516e7-b73d-4fb9-97c2-1db0ca2139e5', url: 'https://github.com/H4rsh99/harsh_sonar.git']])
           
            }
        }
        stage('terra-init') {
            steps {
                sh 'terraform init -reconfigure'
            }
        }
        stage('terra-apply') {
        
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
        stage('terra-destroy') {
          
                       
            steps {
                sh 'ls'
            }
        }
    }
}
